 <div class="header-point-color" id="title-how">
          <h1>Latest arrivals</h1>
          <h1 class="point">.</h1>
        </div>

<div class="container cards-grid">
    <% @computers.last(4).each do |c| %>
      <%= link_to computer_path(c) do%>
        <div class="card-product">
          <% if c.photo.attached? %>
            <%= cl_image_tag(c.photo.key) %>
          <% end %>
          <div class="card-product-infos">
            <div>
              <h2><%= c.name %></h2>
              <h4><%= c.year %></h4>
              <p class="card-details"><%= c.details[0..50]%> <%= '...' if c.details.length > 50 %></p>
            </div>
            <div class="card-price-km">
              <h3><%= c.price %></h3>
              <h3>1.3 km</h3>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

<div class="container-presentation">
  <div class="header-point-color" id="title-how">
          <h1>How it works</h1>
          <h1 class="point">.</h1>
        </div>
