    <div class="card-presentation">
      <%= image_tag 'search.svg' %>
      <h1>Search</h1>
    </div>
    <div class="card-presentation">
      <%= image_tag 'pay.svg' %>
      <h1>Rent</h1>
    </div>
    <div class="card-presentation">
      <%= image_tag 'computer.svg' %>
      <h1>Enjoy</h1>
    </div>
  </div>
  <button class="primary-button-purple"><%= link_to "More details", new_user_registration_path, class:"button-details" %></button>
</div>
