
<div class="container">
  <%= link_to computers_path do %>
    <i class="fa-solid fa-arrow-left-long"></i>
  <% end %>

  <div class="big-card-details">
    <div class="card-img-book">
      <div>
        <%= cl_image_tag(@computer.photo.key, class: 'big-image') %>
      </div>

      <div class="box-item-square">
        <h3> <%= @computer.name %></h3>
        <%# <%= image_tag("map.png", class: "map") %>
        <div style="width: 100%; height: 600px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <div class="price-details">
          <p id="price"><%= @computer.price %></p>
          <p>â‚¬/month</p>
        </div>
        <p id="user"><%= @user.first_name %> 4.3 <i class="fa-solid fa-star"></i></p>
        <p> <%= @computer.details %></p>
        <% if user_signed_in? %>
        <button class="primary-button-purple"><%= link_to "Book", new_computer_booking_path(@computer) %></button>
        <% end %>
      </div>
    </div>

    <div class="box-item-flat">
      <ul>
        <li>Year: <%= @computer.year %></li>
        <li>Precessor: <%= @computer.processor %></li>
        <li>RAM: <%= @computer.ram %></li>
        <li>Storage: <%= @computer.storage %></li>
        <li>Graphic card: <%= @computer.graphic_card %></li>
      </ul>
    </div>

  </div>
</div>
