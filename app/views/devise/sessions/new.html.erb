<div class="form-container form-style">
    <div class="header-point-color" id="sign-in-title">
          <h1>Sign in</h1>
          <h1 class="point">.</h1>
        </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"text-form") do |f| %>
      <%# <div class="form-inputs"> %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class:"style-input" },
                    label_html: { class: "label-form" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class:"style-input" },
                    label_html: { class: "label-form" } %>
        <%= f.input :remember_me, label_html: { class:"label-form"}, as: :boolean if devise_mapping.rememberable? %>
      <%# </div> %>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'button-form' %>
    <% end %>
  </div>
</div>
